 import javafx.application.Application;
 import javafx.geometry.Rectangle2D;
 import javafx.scene.Group;
 import javafx.scene.Scene; 
 import javafx.scene.control.*; 
 import javafx.scene.image.Image;
 import javafx.scene.image.ImageView;
 import javafx.scene.layout.*;
 import javafx.scene.paint.Color;
 import javafx.stage.Stage; 
 
/**
 * Write a description of JavaFX class Test here.
 *
 * @author Claudia Xue
 * @version 5/28/2018
 */
public class Test extends Application
{
    @Override
    public void start(Stage stage) throws Exception
    {
        // load the image
        Image image1 = new Image("ground1.png");
        Image image2 = new Image("ground2.png");
        Image image3 = new Image("ground3.png");
        Image image4 = new Image("pause.png");
        
        Button pause = new Button("", new ImageView(image4));
        Label player = new Label("Player 1's Turn");
        Label moves = new Label("Moves Left: 3");
        HBox topBar = new HBox(325);
        topBar.getChildren().addAll(player, moves, pause);

        BorderPane border = new BorderPane();
        Scene scene = new Scene(border);
        scene.setFill(Color.GREEN);
        
        border.setTop(topBar);
        GridPane gridPic = new GridPane();
        GridPane gridBut = new GridPane();
        
        // simple displays ImageView the image as is
        for(int row = 0; row < 16; row++)
        {
            for(int col = 0; col < 16; col++)
            {
                int num = (int)(Math.random() * 6);
                if(num == 5)
                    gridPic.add(new MenuItem("", new ImageView(image3)), row, col);
                else
                    if(num == 4)
                        gridPic.add(new ImageView(image2), row, col);
                    else
                        gridPic.add(new ImageView(image1), row, col);
            }
        }
        
        StackPane board = new StackPane();
        board.getChildren().addAll(gridBut, gridPic);
        border.setCenter(board);
        
        VBox characters = new VBox();
        characters.getChildren().add(new Button("End Turn"));
        border.setRight(characters);


        stage.setTitle("ImageView");
        stage.setWidth(40);
        stage.setHeight(50);
        stage.setScene(scene); 
        stage.sizeToScene(); 
        stage.show(); 
    }

    public static void main(String[] args) {
        Application.launch(args);
    }
}
